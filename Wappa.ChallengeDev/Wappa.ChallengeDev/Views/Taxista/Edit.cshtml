@model Taxista
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IdTaxista" />
    <input type="hidden" asp-for="Latitude" />
    <input type="hidden" asp-for="Longitude" />
    <div class="form-group">
        <label asp-for="PrimeiroNome"></label>
        <div><span asp-validation-for="PrimeiroNome" class="text-danger"></span></div>
        <input asp-for="PrimeiroNome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UltimoNome"></label>
        <div><span asp-validation-for="UltimoNome" class="text-danger"></span></div>
        <input asp-for="UltimoNome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Endereco"></label>
        <div><span asp-validation-for="Endereco" class="text-danger"></span></div>
        <input asp-for="Endereco" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Marca"></label>
        <div><span asp-validation-for="Marca" class="text-danger"></span></div>
        <input asp-for="Marca" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Modelo"></label>
        <div><span asp-validation-for="Modelo" class="text-danger"></span></div>
        <input asp-for="Modelo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Placa"></label>
        <div><span asp-validation-for="Placa" class="text-danger"></span></div>
        <input asp-for="Placa" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>